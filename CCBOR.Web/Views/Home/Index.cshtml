@{
    ViewBag.Title = "Columbus Community Bill of Rights";
}
@section AddToHead{
    <link href="~/Content/assets/plugins/slider.revolution/css/extralayers.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/slider.revolution/css/settings.css" rel="stylesheet" type="text/css" />
}
@Html.Partial("~/Views/Home/_Slider.cshtml")
<section class="alert-info">
	<div class="text-center">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h3>
						CCBOR Ordinance Ballot Initiative turned in and certified for 12,134 VALID Columbus Signatures!!!
					</h3>
				</div>
				<div class="col-12 col-md-4">
					<img class="img-fluid" src="~/Content/assets/images/CCBORCityCouncil5.jpg" />
				</div>
				<div class="col-12 col-md-4">
					<img class="img-fluid" src="~/Content/assets/images/CCBOR City Council.jpg" />
				</div>
				<div class="col-12 col-md-4">
					<img class="img-fluid" src="~/Content/assets/images/CCBORCityCouncil6.jpg" />
				</div>
				<div class="col-12">
					<p class="font-lato fs-20 mt-30">
						Only 9,000 were required to put a Citizen-led city ordinance on the November, 2018, Columbus, Ohio Ballot
					</p>
					<p>
						We truly care about our environment.  Please visit our Help Out page to learn how you can help our effort.
					</p>
					<a href="@Url.Action("Volunteer","HelpOut")" rel="nofollow" class="btn btn-default btn-lg mt-30">VOLUNTEER</a>
				</div>
			</div>

		</div>
		</div>
</section>
<section>
    <div class="container">
        <h2>
            Welcome
        </h2>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="mt-20">
                    <div class="text-center mb-30">
                        <p><strong>The Campaign For</strong></p>
                        <p><strong>The Columbus Community Bill of Rights</strong></p>
                        @Html.Partial("~/Views/OurWork/Shared/_UpstreamVideo.cshtml")
                    </div>
                    <div>
                        <p>
                            We began our latest initiative on Monday, June 26th, 2017 to get our Columbus Community Bill of Rights
                            ordinance on the local ballot for the November 2018 election.
                        </p>
                        <p>
                            Stay tuned to our newsletter for updates as we continue to engage with city government, and circulate our petitions
                            to Columbus city voters over the next 12 months.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="alternate">
    <div class="container">
        <h2>
            Our Work
        </h2>
        @Html.Partial("~/Views/OurWork/Shared/_OurWorkOverview.cshtml")
        <p>
            <a href="@Url.Action("Index","OurWork")" class="btn btn-3d btn-lg btn-primary"><i class="glyphicon glyphicon-book"></i>LEARN MORE</a>
        </p>
    </div>
</section>
<section class="theme-color">
    <div class="container">
        <h2>
            Resources
        </h2>
        <p>Learn more about our effort to ensure safe drinking water, clean air, and safe soil in the City of Columbus. </p>
        <p>
            <a href="@Url.Action("Index","Resources")" class="btn btn-3d btn-lg btn-white"><i class="glyphicon glyphicon-book"></i>LEARN MORE</a>
        </p>
    </div>
</section>
<section>
    <div class="container">
        <h2>
            Help Out
        </h2>
        <div class="callout alert alert-border alert-info b-0 mt-60 mb-60">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Content/assets/images/ccbor-help-out-01.jpg" />
                </div>
                <div class="col-md-8">
                    <div class="mt-10">
                        <p>
                            <strong>
                                JOIN US FOR OUR NEXT MEETING
                            </strong>
                        </p>
                    </div>
                    <div class="mt-10">
                        <p>
                            <strong>
                                We have organizing meetings most every week, on Monday evenings at 7:00pm.
                            </strong>
                        </p>
                    </div>
                    <div class="mt-10">
                        <p>
                            <strong>
                                If interested in attending or for more information, please contact <br />
                                <a href="mailto:info@columbusbillofrights.org">info@columbusbillofrights.org</a>
                            </strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <p>
            <a href="@Url.Action("Index","HelpOut")" class="btn btn-3d btn-lg btn-primary"><i class="glyphicon glyphicon-book"></i>LEARN MORE</a>
        </p>
    </div>
</section>
<section class="alternate">
    <div class="container">
        <h2>
            Events
        </h2>
        <p>To learn more about upcoming events, visit our events page where you can sign up for petitioning, sign our petition, and learn more about our issue.</p>
        <p>
            <a href="@Url.Action("Index","Events")" class="btn btn-3d btn-lg btn-primary"><i class="glyphicon glyphicon-book"></i>LEARN MORE</a>
        </p>
    </div>
</section>
@section scripts
{
    <script src="~/Content/assets/plugins/slider.revolution/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/Content/assets/plugins/slider.revolution/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/Scripts/Custom/home.js"></script>
}