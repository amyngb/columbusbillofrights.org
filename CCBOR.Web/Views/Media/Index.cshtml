
@{
    ViewBag.Title = "Media Gallery";
}

<section id="mediaGallery">
    <div class="container text-center">
        <h1 class="m-0 fs-50 fw-300 wow fadeInUp" data-wow-delay="0.4s">Media Gallery</h1>
        <p class="lead font-lato fs-30 wow fadeInUp" data-wow-delay="0.7s">Learn more about CCBOR with photos and videos</p>
        <div class="mt-30">
            <a href="@Url.Action("Donate", "HelpOut")" class="btn btn-3d btn-lg btn-green"><i class="glyphicon glyphicon-piggy-bank"></i>DONATE NOW</a>
            <span class="fs-17 hidden-xs-down">&nbsp; AND &nbsp;</span>
            <a href="@Url.Action("Volunteer", "HelpOut")" class="btn btn-3d btn-lg btn-primary"><i class="glyphicon glyphicon-user"></i>VOLUNTEER</a>
        </div>
    </div>
</section>
<section class="theme-color">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>
                    Video Gallery
                </h2>
            </div>
            <div class="col-12 col-sm-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" width="560" height="315" src="https://www.youtube.com/embed/_HpLOCBFl9E" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-12 col-sm-6 mb-30">
                <h3>
                    Featured Video: Protest of Jon Husted 
                </h3>
                <p>
                    Columbus Ohio, September 9, 2015 <br />
                    In front of The Athletic Club
                    where Husted was speaking
                </p>
            </div>
            <div class="col-12">
                <p>Learn more about our issue by exploring our video gallery.</p>
                <p>
                    <a href="@Url.Action("VideoGallery","Media")" class="btn btn-3d btn-lg btn-white"><i class="glyphicon glyphicon-book"></i>SEE MORE</a>
                </p>
            </div>
        </div>
    </div>
</section>
